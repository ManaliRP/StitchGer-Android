<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_tailer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.indu157.admin.add_tailer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tailer Details"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="70dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/addtailerdetails"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textColor="#ff535766"
        android:layout_marginTop="28dp"
        android:drawableTint="#FF4081"
        android:textSize="14dp"
        android:id="@+id/etid"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addtailerdetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textColor="#ff535766"
        android:drawableTint="#FF4081"
        android:textSize="14dp"
        android:id="@+id/new_user_name"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/etid"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:textColor="#ff535766"
        android:drawableTint="#FF4081"
        android:textSize="14dp"
        android:id="@+id/mobinumber"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:layout_below="@id/new_user_name"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Joining Date "
        android:textColor="#ff535766"
        android:drawableTint="#FF4081"
        android:textSize="14dp"
        android:id="@+id/joindate"
        android:inputType="date"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/mobinumber"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Salary "
        android:textColor="#ff535766"
        android:drawableTint="#FF4081"
        android:textSize="14dp"
        android:id="@+id/salary"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/joindate"
        android:layout_marginLeft="50dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="290dp"
    android:weightSum="1">

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:background="@color/colorSecondary"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/joindate"
        android:layout_marginRight="30dp"
        android:onClick="userReg"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:background="@color/colorSecondary"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancel"
        android:layout_below="@id/save"
        android:layout_marginTop="1dp"
        android:onClick="usercancel"
        android:layout_weight="0.58" />
</LinearLayout>


</RelativeLayout>
